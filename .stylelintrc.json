{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen",
          "if",
          "each",
          "mixin",
          "include",
          "function",
          "return"
        ]
      }
    ]
  }
}
